<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/taskadd"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="595dp"
        android:padding="10sp"
        android:text="Add Task"
        android:textAlignment="center"
        android:textColor="@color/DeepSkyBlue"
        android:textSize="50dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tasktitle"
        android:layout_width="312dp"
        android:layout_height="60dp"
        android:layout_below="@+id/taskadd"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="191dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="480dp"
        android:hint="Title"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/taskdescription"
        android:layout_width="311dp"
        android:layout_height="59dp"
        android:layout_below="@+id/tasktitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="279dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="393dp"
        android:hint="Description" />

    <TextView
        android:id="@+id/selectedDateTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="372dp"
        android:layout_marginEnd="218dp"
        android:layout_marginBottom="316dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:text="date and time"
        android:textSize="18sp" />

    <Button
        android:id="@+id/selectDateTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="235dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="315dp"
        android:padding="10dp"
        android:text="Select date and time" />

    <RadioGroup
        android:layout_width="315dp"
        android:layout_height="61dp"

        android:id="@+id/taskstatus"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="190dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_Active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active" />

        <RadioButton
            android:id="@+id/radio_upcoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming" />

        <RadioButton
            android:id="@+id/radio_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed" />
    </RadioGroup>

    <Button
        android:id="@+id/BtnAdd"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="149dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="120dp"
        android:backgroundTint="@color/DeepSkyBlue"
        android:text="ADD" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="319dp"
        android:layout_marginBottom="271dp"
        android:text="Status:"
        android:textSize="20dp" />

</RelativeLayout>